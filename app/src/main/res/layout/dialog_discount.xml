<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/dialog_discount_layout"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn2"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn3"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn4"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6割引"
            android:onClick="Discount"
            android:id="@+id/btn6"
            android:layout_marginRight="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn7"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn8"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9割引"
            android:onClick="onDiscountClick"
            android:id="@+id/btn9"
            android:layout_marginRight="15dp" />

    </LinearLayout>
</LinearLayout>